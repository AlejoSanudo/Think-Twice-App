<div class="container">
  <h4>Here's how much other people are spending:</h4>            
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Expense</th>
        <th>Value</th>
        <th>Interval</th>
      </tr>
    </thead>
    <tbody>
    <% if @expenses %>
      
      <% @expenses.each do |expense| %>
        <tr>
          <td><%=expense.name%></td>
          <td><%=(expense.value*0.8).to_i%></td>
          <td><%=expense.interval%></td>
        </tr>
      <%end%>
    <%end%>
    </tbody>
  </table>
</div>
